{{#if value}}
	<pre><p>{{value}}</p></pre>
	<div>
		<button class="btn btn-default" id="clear" type="button">
			<span class="glyphicon glyphicon-remove"></span> {{T "Clear"}}
		</button>
	</div>
{{else}}
	{{#if supported}}
	<div>
		<button class="btn btn-default" id="scan" type="button">
			<span class="glyphicon glyphicon-qrcode"><span>
			{{T "Scan"}}
		</button>
	</div>
	{{else}}
	<div class="text-warning">{{T "Barcode scanning not supported on this platform"}}</div>
	{{/if}}
{{/if}}